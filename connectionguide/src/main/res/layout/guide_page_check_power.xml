<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="510">
        <ImageView
            android:id="@+id/check_power_circle"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:background="@drawable/guide_page_check_power_circle"/>
        <ImageView
                android:id="@+id/check_power_plug"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="150dp"
                android:background="@mipmap/guide_page_check_power_plug" />
        <ImageView
                android:id="@+id/check_power_socket"
                android:layout_marginTop="-45dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/guide_page_check_power_socket"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"/>
    <TextView

        android:id="@+id/check_power_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/guidePage_check_power_hint"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>
    <TextView

        android:id="@+id/check_power_finish"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_width="150dp"
        android:layout_weight="40"
        android:gravity="center"
        android:background="@drawable/guide_page_check_power_btn"
        android:text="@string/guidePage_check_power_btn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"/>
</LinearLayout>