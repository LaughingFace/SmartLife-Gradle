<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="510">
        <ImageView
            android:id="@+id/select_device_circle"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:background="@drawable/guide_page_select_device_circle"/>
        <ImageView
            android:id="@+id/select_device_wifi_text"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:rotation="60"
            android:layout_height="180dp"
            android:src="@mipmap/guide_page_wifi_text_icon" />
        <ImageView
            android:id="@+id/select_device_phone"
            android:visibility="gone"
            android:rotationX="60"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/guide_page_phone"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"/>
    <TextView

        android:id="@+id/check_power_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/guidePage_check_power_hint"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>
    <TextView

        android:id="@+id/check_power_finish"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_width="150dp"
        android:layout_weight="40"
        android:gravity="center"
        android:background="@drawable/guide_page_check_power_btn"
        android:text="@string/guidePage_check_power_btn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"/>
</LinearLayout>