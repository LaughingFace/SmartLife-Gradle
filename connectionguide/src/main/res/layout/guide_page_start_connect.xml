<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_page_bk"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="510">
        <ImageView
            android:id="@+id/start_connect_circle"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"

            android:background="@drawable/guide_page_start_connect_circle"/>
        <ImageView
            android:id="@+id/start_connect_device"
            android:layout_marginTop="-45dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:src="@mipmap/guide_page_device_icon"/>

        <FrameLayout
            android:id="@+id/start_connect_arrow"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="30dp"
            android:rotation="45"
            >
            <ImageView android:id="@+id/route_start_arrow_up"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/guide_page_arrow1"
                />
            <ImageView android:id="@+id/route_connect_arrow_down"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/guide_page_arrow2"
                />

        </FrameLayout>
        <ImageView

            android:id="@+id/start_connect_phone"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="300dp"
            android:layout_marginTop="150dp"
            android:src="@mipmap/guide_page_phone" />

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"/>
    <TextView

        android:id="@+id/start_connect_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/guide_page_start_connect_hint"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>
    <TextView

        android:id="@+id/start_connect_finish"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_width="150dp"
        android:layout_weight="40"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/guide_page_start_connect_btn"
        android:text="@string/guide_page_start_connect_btn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"/>
</LinearLayout>